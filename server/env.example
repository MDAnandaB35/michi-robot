# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Database Configuration
MONGODB_URI=your_mongodb_connection_string_here
MONGODB_DBNAME=michi_robot
MONGODB_COLLECTION=chat_logs

# CORS Configuration
# For local development: ALLOWED_CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://michi-robot.netlify.app
# For production: ALLOWED_CORS_ORIGINS=https://michi-robot.netlify.app
ALLOWED_CORS_ORIGINS=https://michi-robot.netlify.app

# MQTT Configuration
MQTT_BROKER=broker.emqx.io
MQTT_PORT=1883
MQTT_TOPIC=testtopic/mwtt

# File Storage
UPLOAD_FOLDER=uploads
CHROMA_PATH=chroma_db

# Relevance Threshold
RELEVANCE_THRESHOLD=0.7

# SSL Configuration
# For local development: USE_SSL=false
# For production with Nginx: USE_SSL=false (handled by Nginx)
# For production with direct SSL: USE_SSL=true
USE_SSL=false
# For IP-only setup (self-signed certificates):
SSL_CERT_PATH=/etc/ssl/certs/nginx-selfsigned.crt
SSL_KEY_PATH=/etc/ssl/private/nginx-selfsigned.key 